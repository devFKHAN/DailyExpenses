<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reminder"
    android:background="@color/dawn"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:layout_height="168dp"
            android:src="@drawable/logo2"
            android:contentDescription="TODO" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/round_outline1">
        <TextView
            android:id="@+id/simple_text"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_your_monthly_budget"
            android:textSize="20sp"

            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/budget"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_amount"
            android:inputType="number"
            android:background="@drawable/box1"
            android:importantForAutofill="no"
            android:textColorHint="@color/black"
            />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_daily_reminder_time"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TimePicker
            android:id="@+id/rem"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:amPmBackgroundColor="@color/black"
            android:background="@drawable/box1"
            android:timePickerMode="spinner"
            tools:ignore="UnusedAttribute"

            />

        <Button
            android:id="@+id/done_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:onClick="mainview"
            />
        </LinearLayout>



</LinearLayout>